<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register | eSparkBiz</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
    <link rel="stylesheet" href="/css/activation.css" />
</head>

<body>
    <section class="mainSection">
        <div class="container">
            <div class="rowSection">
                <div class="columnF">
                    <div class="divCard">
                        <div class="imgDiv">
                            <img src="/images/register3.jpg" alt="Sample photo" class="img-fluid" style="
                    border-top-left-radius: 0.25rem;
                    border-bottom-left-radius: 0.25rem;
                  " />
                        </div>
                    </div>
                </div>

                <div class="columnS">
                    <div class="divCard">
                        <div class="allInputDiv">
                            <div class="site-page">
                                <header class="header_card">
                                    <div><img src="/logo.png" alt="" class="logo" /></div>
                                </header>
                                <div class="bodypage">
                                    <div class="card1">
                                        <div>
                                            <h1 class="header">â€œThank you for registering!</h1>
                                        </div>
                                        <div>
                                            <p class="card-p">
                                                click on below Link to activate your account
                                            </p>
                                        </div>
                                        <div>
                                            <p id="active">
                                                <a onclick="activclick()" class="btn btn-warning" style="text-decoration: none">Active
                          Button</a>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>

<script>
    async function activclick() {
        var email = "<%= email %>";
        var resultRandom = "<%= resultRandom %>";

        let data = await fetch(`/active/${resultRandom}`, {
                method: "POST",
                headers: {
                    "Content-Type": "application/json",
                },
                body: JSON.stringify({
                    email,
                    resultRandom,
                }),
            })
            .then((res) => res.json())
            .then((data) => {

                if (data.UpdateStatus == 1) {
                    location.assign("/login");
                }
            });
    }
</script>

</html>